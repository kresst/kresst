{
    "name": "kresst",
    "description": "Lightweight opinionated Node.js REST supercharge",
    "version": "1.0.0",
    "scripts": {
        "integration": "ts-node integration",
        "build": "rimraf dist && tsc -p tsconfig.json --outDir dist",
        "build:prod": "rimraf dist && tsc -p tsconfig.json --outDir dist --noUnusedLocals --noUnusedParameters",
        "lint": "tslint -t stylish -c tslint.json -p tsconfig.json 'src/**/*.ts'",
        "test": "nyc mocha && rimraf .nyc_output",
        "precommit": "lint-staged && yarn lint && yarn test",
        "postcommit": "git add ."
    },
    "nyc": {
        "check-coverage": true,
        "exclude": [
            "**/*.d.ts"
        ],
        "include": [
            "src/**/*.ts",
            "test/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "all": true,
        "sourceMap": true,
        "instrumentation": true
    },
    "lint-staged": {
        "*.{js,json,css,md,ts,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kresst/kresst"
    },
    "author": "RaphaÃ«l MARQUES <work.rmarques@gmail.com>",
    "contributors": [],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kresst/kresst/issues"
    },
    "homepage": "https://kresst.raphaelmarques.fr/docs",
    "dependencies": {
        "lodash": "4.17.10",
        "reflect-metadata": "0.1.12",
        "rxjs": "6.2.0",
        "typescript-optional": "1.5.0",
        "uuid": "3.2.1",
        "verror": "1.10.0"
    },
    "devDependencies": {
        "@types/chai": "4.1.3",
        "@types/lodash": "4.14.109",
        "@types/mocha": "5.2.0",
        "@types/node": "10.1.3",
        "@types/restify": "5.0.8",
        "@types/restify-errors": "4.3.2",
        "@types/sinon": "5.0.0",
        "@types/supertest": "2.0.4",
        "@types/uuid": "3.4.3",
        "@types/verror": "1.10.3",
        "chai": "4.1.2",
        "coveralls": "3.0.1",
        "husky": "0.14.3",
        "immutable": "3.8.2",
        "lint-staged": "7.1.2",
        "mocha": "5.2.0",
        "mocha-typescript": "1.1.14",
        "nyc": "11.8.0",
        "prettier": "1.13.0",
        "restify": "7.2.0",
        "restify-errors": "6.0.0",
        "rimraf": "2.6.2",
        "rxjs-tslint": "0.1.4",
        "sinon": "5.0.10",
        "source-map-support": "0.5.6",
        "supertest": "3.1.0",
        "ts-node": "6.0.5",
        "tslint": "5.10.0",
        "tslint-clean-code": "0.2.7",
        "tslint-consistent-codestyle": "1.13.0",
        "tslint-eslint-rules": "5.3.1",
        "tslint-sonarts": "1.6.0",
        "typescript": "2.8.3",
        "yargs": "11.0.0"
    }
}
